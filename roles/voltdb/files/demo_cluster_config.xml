<!-- Setup file for ChargIT Demo -->

<deployment>
  <cluster sitesperhost="8" kfactor="1"/>
  <commandlog enabled="true" synchronous="false">
    <frequency time="300" transactions="1000"/>
  </commandlog>
  <paths>
    <commandlog path="/voltdbdatassd1/voltdbroot/cmdlog" />
    <commandlogsnapshot path="/voltdbdatassd2/voltdbroot/snapshot" />
    <snapshots path="/voltdbdatassd2/voltdbroot/snapshots" />
  </paths>
  <snapshot prefix="VoltDB" frequency="30m" retain="3" />
  <topics enabled="true">
    <topic name="ADDCREDIT" procedure="AddCredit" /> 
    <topic name="USER_FINANCIAL_EVENTS" retention="10gb" />
  </topics>
</deployment>